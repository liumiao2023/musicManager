<table class="table table-hover">
    <thead>
        <tr>
            <td>音乐序号</td>
            <td>音乐名称</td>
            <td>长度</td>
            <td>素材网址</td>
            <td>美元价格</td>
            <td>人民币价格</td>
            <td>文件类型</td>
        </tr>
    </thead>
    <tbody>
        <% @items.each do |item| %>
        <tr>
            <td><%= item.id %></td>
            <td><%= item.title %></td>
            <td><%= item.length %></td>
            <td><%= item.url %></td>
            <td><%= item.usd %></td>
            <td><%= item.rmb %></td>
            <td><% if item.music_type == true %>
                音乐
            <% else %>
                音效
                <% end %>
            </td>
            <td>
                <audio controls>
                    <source src="<%= item.music_file %>" type="audio/wav">
                </audio>
                <%= link_to("下载", item_path(item), class: "btn btn-sm btn-default")%>
                <%= link_to("编辑", edit_item_path(item), class: "btn btn-sm btn-default")%>
                <%= link_to("删除", item_path(item),    class: "btn btn-sm btn-default",
                      method: :delete, data: { confirm: "你真的要删除吗?" } )%>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
