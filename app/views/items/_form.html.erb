<%= simple_form_for @item do |f| %>
  <div class="form-group">
    <%= f.input :title, label: '音乐名称', placeholder: '请填写音乐名称', input_html: { class: "form-control"} %>
    <%= f.input :length, label: '音乐长度', placeholder: '01:30', input_html: { class: "form-control"} %>
    <%= f.input :url, label: '原地址', placeholder: '请填写素材原始地址', input_html: { class: "form-control"} %>
    <%= f.input :usd, label: 'USD', placeholder: '20', input_html: { class: "form-control"} %>
    <%= f.input :rmb, label: 'RMB', placeholder: '120', input_html: { class: "form-control"} %>
    <%= f.input :type, label: '素材类型', placeholder: '请选择素材类型', input_html: { class: "form-control"} %>
  </div>
  <%= f.submit "Submit", class: "btn btn-primary", data: { disable_with: "Submitting..." } %>
<% end %>
